<odoo> 
<!-- materials tree view -->
<record id="materials_view_tree" model="ir.ui.view">
      <field name="name">materials.view.tree</field>
      <field name="model">materials</field>
      <field name="arch" type="xml">
            <tree>
                  <field name="name"/>
                  <field name="department"/>
            
                  
            </tree>
      </field>
</record>
<!-- model.name form view -->
<record id="materials_view_form" model="ir.ui.view">
      <field name="name">materials.view.form</field>
      <field name="model">materials</field>
      <field name="arch" type="xml">
            <form string="">
                  <sheet>
                        <group >
                              <field name="name"/>
                              <field name="department"/>  
                        </group>
                  </sheet>
            </form>
      </field>
</record>
</odoo>