                                        <label class="form-label" for="name">Name</label>
                                    </div>
                                    <div class="form-check">
                                        <button  type="submit"  class="btn btn-outline-success btn-rounded animate__animated animate__backInUp" data-mdb-ripple-color="dark">Success
                                        </button>
                                    </div>
                                    
                                </div>
                                
