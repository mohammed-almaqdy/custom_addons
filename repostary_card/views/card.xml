<odoo>   
        <record id="card_view_form" model="ir.ui.view">
            <field name="name">card_view_form</field>
            <field name="model">card</field>
            <field name="arch" type="xml">
                <form string="cards form">
                  <header>
                    <button name="button_done" string="active" status="value1" class="oe_highlight" type="object" attrs="{'invisible': [('status','=', 'active')]}" />
                    <button name="button_cancel" string="Cancel" status="value3" type="object" attrs="{'invisible': [('status','=', 'canceld')]}"/>
                    <field name="status" widget="statusbar" status_visible="active,expired,not_active"/>
                 </header>
                    <sheet>
                      
                      <div class="oe_title">
                        <h1>
                               <field name="card_number" readonly="1"/>
                         </h1>
                      </div>
                     
                        <group>

                          
                          <field name="beneficiary"/>
                          <field name="card_date"/>
                          <field name="expired_date"/>
                          <field name="card_balance"/>
                          <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="care_view_tree" model="ir.ui.view">
          <field name="name">card.view.tree</field>
          <field name="model">card</field>
          <field name="arch" type="xml">
            <tree>
              <field name="card_number"/>
              <field name="beneficiary"/>
              <field name="card_date"/>
              <field name="status"/>
              <button name="button_done" string="active"  class="oe_highlight" type="object" attrs="{'invisible': [('status','=', 'active')]}" />
              <button name="button_cancel" string="Cancel"  type="object" attrs="{'invisible': [('status','=', 'canceld')]}"/>
            </tree>
          </field>
        </record>
        
        <record id="card_view_kanban" model="ir.ui.view">
          <field name="name">card.view.kanban</field>
          <field name="model">card</field>
          <field name="arch" type="xml">
            <kanban default_group_by='status'>
              <field name="card_number"/>
              <field name="beneficiary"/>
              <field name="status"/>
                   <templates>
                          <t t-name="kanban-box">
                              <div t-attf-class="oe_kanban_global_click">                               
                                  <ul>
                                  <div class="oe_kanban_details">
                                    <li>Card Number
                                      <strong class="o_kanban_record_title">
                                      <field name="card_number"/>
                                      </strong>
                                    </li>                                 
                                      <div t-if="record.beneficiary.value">
                                        <li>Beneficiary:
                                              <t t-esc="record.beneficiary.value"/>
                                            </li>
                                      </div>                                                                    
                                      <div t-if="record.status.value">
                                        <li>Status:
                                          <t t-esc="record.status.value"/>
                                        </li>
                                  </div>
                                  </div>
                                  </ul>
                              </div>
                          </t>
                      </templates>
            </kanban>
          </field>
        </record>
        <record model="ir.actions.act_window" id="care_card_list">
          <field name="name">card window</field>
          <field name="res_model">card</field>
          <field name="view_mode">kanban,tree,form</field>
        </record>
        <menuitem name="Care_Card" id="card_menu_root"/>
        <menuitem name="Care Cards" id="care_menu_1" parent="card_menu_root"/>
        <menuitem name="Card" id="care_card_menu_2" parent="care_menu_1" action="care_card_list"/>
  </odoo>