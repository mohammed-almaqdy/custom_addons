<odoo>
    <data>
      <record model="ir.ui.view" id="newrequest_tre">
        <field name="name">newrequests_tree</field>
        <field name="model">newrequest</field>
        <field name="arch" type="xml">
          <tree>
            <field name="name"/>
            <field name="card_balance"/>
            <field name="request_status"/>
            <field name="document_ids"/>
            <button name="button_pending" string="pending"   class="oe_highlight" type="object" attrs="{'invisible': [('request_status','=', 'pending')]}"/>
            <button name="button_approved" string="approved"   class="oe_highlight" type="object" attrs="{'invisible': [('request_status','=', 'approved')]}" />
            <button name="button_rejected" string="rejected"   type="object" attrs="{'invisible': [('request_status','=', 'rejected')]}"/>
          </tree>
        </field>
      </record>
  
  <record id="newrequest_form" model="ir.ui.view">
      <field name="name">newrequest_form</field>
      <field name="model">newrequest</field>
      <field name="arch" type="xml">
          <form string="newrequest form">
            <header>
              <button name="button_pending" string="pending" request_status="pending"  class="oe_highlight" type="object" />
              <button name="button_approved" string="approved" request_status="approved"  class="oe_highlight" type="object" />
              <button name="button_rejected" string="rejected" request_status="rejected"  type="object"/>
              <field name="request_status" widget="statusbar"  status_visible="pending,approved,rejected"/>
           </header>
              <sheet>
                <div class="oe_title">
                  <h1>
                         <field name="request_number" readonly="1"/>
                   </h1>
                </div>
                  <group>
                    <field name="name"/>
                    <field name="card_balance"/>
                    <field name="request_date"/>
                    <field name="document_ids"/>
                  </group>
              </sheet>
          </form>
      </field>
  </record>
  
  <record id="newrequest_kanban" model="ir.ui.view">
    <field name="name">newrequest.view.kanban</field>
    <field name="model">newrequest</field>
    <field name="arch" type="xml">
      <kanban default_group_by='request_status'>
        <field name="request_number"/>
        <field name="name"/>
        <field name="card_balance"/>
        <field name="request_status"/>
        <templates>
          <t t-name="kanban-box">
            <div t-attf-class="oe_kanban_global_click">
                  <!-- <div class="o_kanban_image">
                      <img alt="Avatar" t-att-src="kanban_image('res.partners', 'image_medium',id.record_value)"/>
                  </div> -->
              <ul>
                    
                <div class="oe_kanban_details">
                  <li>request_number
                    <strong class="o_kanban_record_title">
                    <field name="request_number"/>
                    </strong>
                  </li>
                    
                  <div t-if="record.name.value">
                    <li>name:
                          <t t-esc="record.name.value"/>
                        </li>
                  </div>
                    
                    
                  <div t-if="record.card_balance.value">
                    <li>card_balance:
                      <t t-esc="record.card_balance.value"/>
                    </li>
                </div>
                </div>
              </ul>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>


  <record model="ir.actions.act_window" id="newrequest_action">
    <field name="name">new request window</field>
    <field name="res_model">newrequest</field>
    <field name="view_mode">kanban,tree,form</field>
  </record> 

  <menuitem name="Cards Request" id="new_cardmenu" parent="card_menu_root"/>
  <menuitem name="New_Request" id="news_cardmenu" parent="new_cardmenu" sequence='1' action="newrequest_action"/> 
    </data>
  </odoo>